<ul class="pricing-table">
  <li class="title"><%= @classtest.title %></li>
  <li class="description"><%= @classtest.description %></li>
  <li class="bullet-item">Testtyp: <%= @classtest.testtype.title %></li>
  <li class="bullet-item">Kurs: <%= @lecture.title unless @lecture.blank? %></li>
  <li class="bullet-item">Kategorie: <%= @classtest.category %></li>
</ul>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Typ</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.title %></td>
      <td><%= question.category %></td>
      <td>
        <% if question.category == 'Text' %>
          <%= link_to(raw("<i class='fi-pencil dark-green icon-big'></i>"), 
              valuate_single_question_classtest_path(@classtest.id, :question_id => question.id)) %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="panel callout radius">
  <h5><%= link_to "Alle Tests anzeigen", classtests_path %> |
  <%= link_to "Aufgaben zur Korrektur", valuate_results_classtest_path(@classtest.id) %></h5>
</div>
