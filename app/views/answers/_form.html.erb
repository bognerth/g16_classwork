<h3><%= @answer.question.title %></h3>

<%= simple_form_for(@answer, :remote => true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :points %>
    <%= f.input :order %>
    <%= f.input :question_id, :as => :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<div class="button-bar text-right">
  <ul class="button-group radius">
    <li><a href="#" onclick="$('a.close-reveal-modal').trigger('click');" class="small button alert">Abbrechen</a></li>
    <!--<li><a href="#" class="small button success">Weiter</a></li>-->
  </ul>
</div> 

<a class="close-reveal-modal">&#215;</a>
