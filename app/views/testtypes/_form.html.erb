<%= simple_form_for(@testtype) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :coursetype, collection: Testtype::COURSES %>
    <%= f.input :title %>
    <%= f.input :description %>
    <fieldset>
      <b>Nur wenn eine Datei mit Fragen und Antworten per Dump integriert werden soll</b><br />
      <%= f.input :test_avatar, :as => :file %>
      <%= f.input :create_questions, :as => :radio_buttons %>
    </fieldset>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
