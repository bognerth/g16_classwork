<% answers = @answers if @answers %>

<%= form_tag "/studentanswers/multiple_choice", :remote => true do |f| %>
  <%#= hidden_field_tag("studenttest_id", ) %>

  <ul class="pricing-table">
    <li class="title"><%= answers.first.question.title %></li>
    <li class="description">
      <p><%= (answers.first.question.category == 'MehrereAntworten' ? "Es sind mehrere Anworten moeglich." : "Es ist nur eine Antwort moeglich. Wenn mehrere Antworten zutreffen, dann entscheiden Sie sich fÃ¼r die weitestgehende.") %></p>
      <p><%#= answer.first.question.help %></p>
    </li>
    
      <% answers.each do |answer| %>
        <li class="bullet-item text-left">
          <%= check_box_tag("studentanswer[]", answer.id, answer.selected) %> &nbsp;<%= answer.answer.title %>
        </li>
      <% end %>
    
    <li class="cta-button"><%= submit_tag("Eintragen", :class => "large alert") %></li>
  </ul> 
<% end %>

